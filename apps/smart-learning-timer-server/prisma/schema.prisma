datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reward {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model FocusSession {
  createdAt  DateTime  @default(now())
  endTime    DateTime?
  focusLevel Int?
  id         String    @id @default(cuid())
  startTime  DateTime?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model FocusAnalytics {
  createdAt         DateTime @default(now())
  id                String   @id @default(cuid())
  sessionsCompleted Int?
  totalFocusTime    Int?
  updatedAt         DateTime @updatedAt
  user              User?    @relation(fields: [userId], references: [id])
  userId            String?
}

model User {
  createdAt           DateTime         @default(now())
  email               String?          @unique
  firstName           String?
  focusAnalyticsItems FocusAnalytics[]
  focusSessions       FocusSession[]
  id                  String           @id @default(cuid())
  lastName            String?
  name                String?
  password            String
  rewards             Reward[]
  roles               Json
  updatedAt           DateTime         @updatedAt
  username            String           @unique
}
